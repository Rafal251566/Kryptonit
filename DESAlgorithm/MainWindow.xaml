<Window x:Class="DESAlgorithm.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="DES Encryption" Height="350" Width="400">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Input:"/>
            <TextBox x:Name="InputText" Height="30" Margin="0,5"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                <Button Content="Encrypt Text" Click="Encrypt_Click" Width="100" Margin="5"/>
                <Button Content="Decrypt Text" Click="Decrypt_Click" Width="100" Margin="5"/>
            </StackPanel>

            <TextBlock Text="Output:"/>
            <TextBox x:Name="OutputText" Height="30" Margin="0,5" IsReadOnly="True"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="60">
                <Button Content="Encrypt File" Click="EncryptFile_Click" Width="100" Margin="5"/>
                <Button Content="Decrypt File" Click="DecryptFile_Click" Width="100" Margin="5"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>